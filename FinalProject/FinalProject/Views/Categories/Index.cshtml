@model IEnumerable<FinalProject.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    td, th {
        padding: 5px 10px;
        border-collapse: collapse;
        border: 2px solid lightgrey;
        font-size: 16px;
    }

    table {
        border-collapse: collapse;
        width: 100%
    }
</style>
<hr />
@if (Session["chon"].ToString() == "Admin")
{
    Html.RenderAction("menuPartial", "LoginUser");
}
<h2>Quản lý Loại sản phẩm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDCate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.IDCate })
            </td>
        </tr>
    }

</table>
