@model IEnumerable<FinalProject.Models.OrderDetail>

@{
    ViewBag.Title = "View Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Order Details</h2>

<h3>Order Information</h3>
<p><strong>Order ID:</strong> @ViewBag.Order.ID</p>
<!-- Other order details like date, customer info, etc. -->

<h3>Order Details</h3>
<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <!-- Other columns if needed -->
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Product.NamePro</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice</td>
            <!-- Other columns if needed -->
        </tr>
    }
</table>

